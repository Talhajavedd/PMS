<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <span">Clients</span>
  </li>
  <li class="breadcrumb-item active">Index</li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Listing clients
    <% if policy(Client).new? %>
      <%= link_to '+', new_client_path, class: "btn btn-dark float-right" %>
    <% end %>
  </div>
  <div class="card-body">
    <%= form_tag clients_path, method: :get do %>
      <div class="field mb-4">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search", aria: {label:"Search", describedby: "basic-addon1"} %>
      </div>
    <% end %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Company</th>
            <th class="text-center">Show</th>
            <% if policy(Client).edit? %>
              <th class="text-center">Edit</th>
            <% end %>
            <% if policy(Client).destroy? %>
              <th class="text-center">Delete</th>
            <% end %>
          </tr>
        </thead>
        </tfoot>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td class="text-center"><%= client.name %></td>
              <td class="text-center"><%= client.company %></td>
              <td class="text-center">
                <%= link_to client_path(client) do %>
                  <i class="fas fa-arrow-alt-circle-right fa-2x text-dark"></i>
                <% end %>
              </td>
              <% if policy(client).edit? %>
                <td class="text-center">
                  <%= link_to edit_client_path(client) do %>
                    <i class="fas fa-pen fa-2x text-dark"></i>
                  <% end %>
                </td>
              <% end %>
              <% if policy(client).destroy? %>
                <td class="text-center">
                  <%= link_to client_path(client), method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fas fa-trash fa-2x text-danger"></i>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="my-4">
        <%= paginate @clients, class: "pagination" %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="destroyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>

