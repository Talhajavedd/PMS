<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Please enter the hours</h5>
  <button class="close" type="button" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>
<div class="modal-body">
  <div class="card-body">
    <%= form_for [@project, @time_log], :remote => true do |f| %>

      <div class="form-group">
        <div class="form-label-group">
          Date:
          <%= f.date_select :date %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-label-group">
          Hours:
          <%= f.time_select :hours, {:default => {:hour => '00', :minute => '00'}} %>
        </div>
      </div>
      <%= f.submit class: "btn btn-dark btn-block" %>  
      <button class="btn btn-secondary btn-block"" type="button" data-dismiss="modal">Cancel</button>

    <% end %>
  </div>
</div>
