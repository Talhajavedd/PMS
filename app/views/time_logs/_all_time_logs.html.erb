<div class="card-body">
  <div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Hours</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @all_time_logs.each do |time| %>
          <tr>
            <td><%= time.user.username %></td>
            <td><%= time.date.to_date %></td>
            <td><%= time.hours %></td>
            <td>
              <% if policy(time).edit? %>
                <%= link_to 'Edit', edit_project_time_log_path(@project, time), class: "btn btn-dark" %>
              <% end %>
            </td>
            <td>
              <% if policy(time).destroy? %>
                <%= link_to "Delete", project_time_log_path(@project,time), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
