<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <span">Dashboard</span>
  </li>
  <li class="breadcrumb-item active">Projects</li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Listing projects
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Name</th>
            <th>Client</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Name</th>
            <th>Client</th>
            <th colspan="5"></th>
          </tr>
        </tfoot>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td><%= project.client.name %></td>
              <% if current_user.manager? %>
                <td>
                  <%= link_to 'Add Payment', new_project_payment_path(project),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal', class: 'btn btn-outline-success'}  %>
                </td>
                <td><%= link_to 'Show Payments', project_payments_path(project), class: "btn btn-outline-success" %></td>
              <% end %>
              <td><%= link_to 'Show', project_path(project), class: "btn btn-dark" %></td>
              <% if current_user.manager? %>
                <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-dark" %></td>
                <td>
                  <a class="btn btn-danger" href="#" data-toggle="modal" data-target="#logoutModal">Delete</a>
                </td>
              <% end %>

              <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                      <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                      </button>
                    </div>
                    <div class="modal-body">Select "Destroy" below if you want to delete this project.</div>
                    <div class="modal-footer">
                      <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <%= link_to 'Destroy', project_path(project), method: :delete, class: "btn btn-danger" %>
                    </div>
                  </div>
                </div>
              </div>

            </tr>
          <% end %>
        </tbody>
      </table>
      <% if current_user.manager? %>
        <div class="text-right">
          <%= link_to 'New Project', new_project_path, class: "btn btn-dark" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>
