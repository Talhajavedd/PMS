<div class="card-body">
  <%= form_for [:admin, @payment] do |f| %>

    <div class="form-group">
      <div class="form-label-group">
        <%= f.text_field :amount, class: "form-control", placeholder: "Amount" %>
        <%= f.label :amount %>
      </div>
    </div>
    <div class="text-right">
      Payment for:
      <%= collection_select(:payment, :project_id, Project.all, :id, :name, {}, {class: "btn btn-secondary dropdown-toggle"}) %><br /><br />
    </div>
    <%= f.submit class: "btn btn-dark btn-block" %>
  <% end %>
</div>
