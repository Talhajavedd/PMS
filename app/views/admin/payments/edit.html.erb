<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <span>Payment</span>
  </li>
  <li class="breadcrumb-item active">Edit</li>
</ol>

<h2>Update Payment</h2>
<hr>

<div class="container">
  <div class="card card-register mx-auto mt-5">
    <div class="card-header">Update Payment Info</div>
      <div class="card-body">
        <%= form_for [:admin, @project, @payment] do |f| %>
          <div id="errors">
            <%= render 'layouts/error_messages', object: @payment %>
          </div>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.text_field :amount, class: "form-control", placeholder: "Amount" %>
              <%= f.label :amount %>
            </div>
          </div>
          <%= f.submit class: "btn btn-dark btn-block" %>
        <% end %>
      </div>
  </div>
</div>
<br/><br/>
