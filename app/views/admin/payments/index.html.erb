<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <span">Payments</span>
  </li>
  <li class="breadcrumb-item active">Index</li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Listing Payments
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Amount</th>
            <th>Project</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Amount</th>
            <th>Project</th>
            <th colspan="3"></th>
          </tr>
        </tfoot>
        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td><%= payment.amount %></td>
              <td><%= payment.project.name %></td>
              <td><%= link_to 'Show', admin_payment_path(payment), class: "btn btn-dark" %></td>
              <td><%= link_to 'Edit', edit_admin_payment_path(payment), class: "btn btn-dark" %></td>
              <td>
                <a class="btn btn-danger" href="#" data-toggle="modal" data-target="#logoutModal">Delete</a>
              </td>

              <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                      <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                      </button>
                    </div>
                    <div class="modal-body">Select "Destroy" below if you want to delete this payment.</div>
                    <div class="modal-footer">
                      <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <%= link_to 'Destroy', admin_payment_path(payment), method: :delete, class: "btn btn-danger" %>
                    </div>
                  </div>
                </div>
              </div>

            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-right">
        <%= link_to 'New payment', new_admin_payment_path, class: "btn btn-dark" %>
      </div>

    </div>
  </div>
</div>
