<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <span">Users</span>
  </li>
  <li class="breadcrumb-item active">Index</li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Listing Users
  </div>
  <div class="card-body">
    <%= form_tag admin_users_path, method: :get do %>
      <div class="float-right mb-4">
        <%= select_tag(:role, options_for_select(roles_user), {include_blank: 'None', class: "btn btn-secondary dropdown-toggle mr-2"}) %>
        <%= submit_tag "Filter Roles", class: "btn btn-info" %>
      </div>
      <%= text_field_tag :search, params[:search], class: "form-control mb-4", placeholder: "Search", aria: { label:"Search" } %>
    <% end %>
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Active</th>
            <th>Role</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= activation_text(user.enable) %></td>
              <td><%= user.role %></td>
              <td><%= link_to activation_link_text(user.enable), set_user_activation_admin_user_path(user), method: :patch, class: "btn btn-warning" %></td>
              <td><%= link_to 'Show', admin_user_path(user), class: "btn btn-dark" %></td>
              <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-dark" %></td>
              <td><%= link_to "Delete", admin_user_delete_path(user), remote: true, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="my-4">
        <%= paginate @users, class: "pagination" %>
      </div>
      <div class="text-right">
        <%= link_to 'New User', new_admin_user_path, class: "btn btn-dark" %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="destroyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>
