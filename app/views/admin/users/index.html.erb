<h1>Listing users</h1>
<%= link_to 'New User', new_admin_user_path %>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Role</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  <% @users.each do |user| %>
    <% unless user == current_user %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <% if user.status %>
          <td>
            <%=link_to "Disable", admin_users_deactivate_path(user_id: @user), method: :post %>
          </td>
        <%else%>
          <td>
            <%=link_to "Enable", admin_users_deactivate_path(user_id: @user), method: :post %>
          </td>
        <% end %>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end%>
  <% end %>
</table>
