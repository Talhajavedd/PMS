<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <span">Users</span>
  </li>
  <li class="breadcrumb-item active">Index</li>
</ol>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Listing Users
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Active</th>
            <th>Role</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Active</th>
            <th>Role</th>
            <th colspan="4"></th>
          </tr>
        </tfoot>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= activation_text(user.enable) %></td>
              <td><%= user.role %></td>
              <td><%= link_to activation_link_text(user.enable), set_user_activation_admin_user_path(user), method: :patch, class: "btn btn-warning" %></td>
              <td><%= link_to 'Show', admin_user_path(user), class: "btn btn-dark" %></td>
              <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-dark" %></td>
              <td><a class="btn btn-danger" href="#" data-toggle="modal" data-target="#logoutModal">Delete</a></td>

              <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                      <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                      </button>
                    </div>
                    <div class="modal-body">Select "Destroy" below if you want to delete this user.</div>
                    <div class="modal-footer">
                      <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <%= link_to 'Destroy', admin_user_path(user), method: :delete, class: "btn btn-danger" %>
                    </div>
                  </div>
                </div>
              </div>

            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-right">
        <%= link_to 'New User', new_admin_user_path, class: "btn btn-dark" %>
      </div>
    </div>
  </div>
</div>
