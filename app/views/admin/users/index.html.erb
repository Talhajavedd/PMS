<h1>Listing users</h1>
<%= link_to 'New User', new_admin_user_path %>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Active</th>
    <th>Role</th>
    <th colspan="3"></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= activation_text(user.enable) %></td>
      <td><%= user.role %></td>
      <td><%= link_to activation_link_text(user.enable), set_user_activiation_admin_user_path(user), method: :patch %></td>
      <td><%= link_to 'Show', admin_user_path(user) %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', admin_root_index_path %>