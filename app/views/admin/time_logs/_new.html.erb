<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Please enter the hours</h5>
  <button class="close" type="button" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>
<div class="modal-body">
  <div class="card-body">
    <%= form_for [:admin, @project, @time_log], remote: true do |f| %>
      <div id="timelog-errors"></div>
      <div class="form-group">
        <div class="form-label-group">
          Date:
          <%= f.date_select :date , {}, class: "btn btn-secondary" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-label-group">
          Hours:
          <%= f.time_select :time_log, { default: { hour: '00', minute: '00'} }, class: "btn btn-secondary" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-label-group">
          <div class="form-row text-center">
            <div class="col-8">
              <div class="float-right mt-1">User:</div>
            </div>
            <div class="col-4">
              <%= collection_select(:time_log, :user_id, @project_users, :id, :username, {}, { include_blank: 'User', class: "form-control"}) %>
            </div>
          </div>
        </div>
      </div>
      <%= f.submit class: "btn btn-dark btn-block" %>  
      <button class="btn btn-secondary btn-block"" type="button" data-dismiss="modal">Cancel</button>

    <% end %>
  </div>
</div>
