<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Please enter the amount</h5>
  <button class="close" type="button" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">Ã—</span>
  </button>
</div>
<div class="modal-body">
  <div class="card-body">
    <%= form_for [@project, @payment], :remote => true do |f| %>

      <div class="form-group">
        <div class="form-label-group">
          <%= f.text_field :amount, class: "form-control", placeholder: 'Amount' %>
          <%= f.label :amount %>
        </div>
      </div>
      <%= f.submit class: "btn btn-dark btn-block" %>
    <% end %>
  </div>
</div>
<div class="modal-footer">
  <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
</div>
