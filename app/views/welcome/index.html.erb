              <td><%= project.time_logs.sum(:hours) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-chart-pie"></i>
    Payments Graph
  </div>
  <div class="card-body">
    <%= pie_chart @payments %>
  </div>

</div>

<div class="card mb-3">
